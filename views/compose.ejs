<%- include('header') -%>

<div class="header-less-body">
  <h1>Compose</h1>
  <form action="/compose" method="POST">
    <strong><label for="title-input">Title</label></strong>
    <br />
    <input class="title-input" type="text" name="compose_title" />
    <br />
    <strong><label for="post-input">Post</label></strong>
    <br />
    <!-- <input class="post-input" type="text" name="compose_post" autocomplete="off"/> -->
    <textarea
      name="compose_post"
      class="post-input"
      rows="10"
      style="width: 100%"
    ></textarea>
    <br />
    <input class="button-input" type="submit" value="Publish" />
  </form>
</div>

<%- include('footer') -%>
